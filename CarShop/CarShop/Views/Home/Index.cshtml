@model IEnumerable<CarShop.Models.Car>
@{
    Layout = "/Views/MusterView.cshtml";
}


<table>
    <tr>
        <td id="main_title" colspan="3"><h1>Tesla</h1></td>
    </tr>
    <tr>
        @foreach (var item in Model)
        {
            <td class="small_card">
                <img alt="@item.NameOfCar" src="@item.MainPhoto">
                <div class="content">
                    <small>	@item.ClassOfCar </small>
                    <h2>@item.NameOfCar</h2>
                    <p>@item.Description</p>
                    <a href="@Url.Action("CarPage", "Home", new { item_id = item.id })" title="@item.NameOfCar">Visit</a>
                </div>
            </td>
            
            } 
    </tr>
</table>
